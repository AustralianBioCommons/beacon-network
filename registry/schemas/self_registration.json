{
  "definitions": {},
  "type": "object",
  "title": "POST/PUT /services schema",
  "required": [
    "email",
    "type",
    "url"
  ],
  "properties": {
    "email": {
      "title": "Email for the admin/maintainer of this service",
      "type": "string",
      "examples": ["admin@service.org"],
      "pattern": "^[a-zA-Z0-9.!#$%&'*+=?^_`{|}~-]+@[a-zA-Z0-9](?:[a-zA-Z0-9-]{0,61}[a-zA-Z0-9])?(?:.[a-zA-Z0-9](?:[a-zA-Z0-9-]{0,61}[a-zA-Z0-9])?)*$"
    },
    "type": {
      "title": "Service type of the application, must be one of the three allowed values",
      "type": "string",
      "enum": [
        "urn:ga4gh:beacon",
        "urn:ga4gh:aggregator",
        "urn:ga4gh:registry"
      ]
    },
    "url": {
      "title": "URL to the info endpoint of the service. For example, GA4GH products use /service-info and Beacon API spec uses /. Use HTTPS, HTTP is for local testing.",
      "type": "string",
      "examples": [
        "https://beacon.ga4gh.org/service-info",
        "https://elixir-beacon.elixir-europe.org/"
      ],
      "pattern": "^(http|https)://"
    }
  }
}
